---
import HeaderLink from '../components/HeaderLink.astro';
const { item } = Astro.props;
const [name, href] = item;
const hasChildren = typeof href !== 'string';
---
<li class="tree-nav-item relative cursor-pointer">
  <HeaderLink href={hasChildren ? '' : href} >
    {name}
  </HeaderLink>

  {hasChildren && (
    <div class="tree-nav-submenu p-2 min-w-32 absolute left-0 shadow backdrop-blur rounded top-full w-full py-2 bg-white dark:bg-gray-800 dark:border-gray-700 z-10 hidden">
      {Object.entries(href).map(([name, href]) => (
        <HeaderLink href={href as any}>
          {name}
        </HeaderLink>
      ))}
    </div>
  )}
</li>