---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import { SITE_TITLE } from "../config";
import ArmStrong from "src/components/ArmStrong.astro";
import Hyperdrive from "src/components/Hyperdrive.astro";
import Starfield from "src/components/Starfield.astro";
import PersonalDesc from "src/components/PersonalDesc.astro";
import GithubRecord from "src/components/GithubRecord.astro";
import TelegramList from 'src/components/TelegramList.astro'


import { getChannelInfo } from '../lib/telegram'

const channel = await getChannelInfo(Astro)

export const prerender = false
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | Home`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <div class="w-full text-center unset gradient-link tracking-wider font-bold bg-clip-text text-transparent bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500">Never Give Up!</div>
    <!-- <GithubRecord /> -->
    <PersonalDesc />
    <div class="w-full text-center unset gradient-link tracking-wider font-bold bg-clip-text text-transparent bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 mt-20">
      <a href="https://channel.rainonpiano.com">碎碎念</a></div>
    <TelegramList channel={channel} />
  </Fragment>
</PageLayout>
